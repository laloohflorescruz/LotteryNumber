@model IEnumerable<Lotery.Models.NumberViewModel>
@using Lotery.Models
@using Lotery.Code


<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Listado de Sorteos</div>
    <div class="panel-body">
        <div class="btn-group">
            <a id="createEditCustomerModal" data-toggle="modal" asp-action="AddEditNumber" data-target="#modal-action-customer" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i>  Agregar Numeros
            </a>
        </div>
        <div class="top-buffer"></div>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>1er Numero</th>
                    <th>2do Numero</th>
                    <th>3er Numero</th>
                    <th>Fecha</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstPrize)</td>
                        <td>@Html.DisplayFor(modelItem => item.SecondPrize)</td>
                        <td>@Html.DisplayFor(modelItem => item.ThirdPrize)</td>
                        <td>@Html.DisplayFor(modelItem => item.LotteryDate)</td>
                        <td>
                            <a id="editCustomerModal" data-toggle="modal" asp-action="AddEditNumber" asp-route-id="@item.Id" data-target="#modal-action-customer"
                               class="btn btn-info">
                                <i class="glyphicon glyphicon-pencil"></i>  Editar
                            </a>
                            <a id="deleteCustomerModal" data-toggle="modal" asp-action="DeleteNumber" asp-route-id="@item.Id" data-target="#modal-action-customer" class="btn btn-danger">
                                <i class="glyphicon glyphicon-trash"></i>  Borrar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action-customer", AreaLabeledId = "modal-action-customer-label", Size = ModalSize.Medium })
@section scripts
    {
    <script src="~/js/customer-index.js" asp-append-version="true"></script>
}